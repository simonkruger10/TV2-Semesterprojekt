    <ImageView fx:id="image" fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true">
        <HBox.margin>
          <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
        </HBox.margin>
      <image>
         <Image url="@Shrek_small.jpg" />
      </image>
    </ImageView>
    <Text fx:id="text" strokeType="OUTSIDE" strokeWidth="0.0" text="Shrek (2001)" wrappingWidth="952.0">
        <font>
            <Font name="Arial" size="24.0" />
        </font>
    </Text>
</fx:root>
